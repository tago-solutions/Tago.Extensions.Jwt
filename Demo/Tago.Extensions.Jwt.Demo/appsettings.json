{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileLoggingOptions": {
    "BatchSize": 10,
    "IsEnabled": true,
    "FileSizeLimit": 10485760,
    "RetainedFileCountLimit": 2,
    "FileName": "test-app.log",
    "LogDirectory": "Logs",
    "FilePerDay": false,
    "Encoding": "Utf8"
  },
  "Jwt": {
    "Settings": {                  
      "ValidatorKey": "%kid%",
      "SecurityKeysCacheExpiration": "00:05:00",      
      "Keys": [
        {
          "Selector": ".*",
          "RequireSignedTokens": false,
          "ValidIssuer": "me",
          "ValidAudience": "me",
          "ValidateIssuer": false,
          //"ValidateIssuerSigningKey": false,
          "ValidateAudience": false,
          "ValidateLifetime": true,
          "ValidateSignature": true,
          "ValidAlgorithms": [ "" ],
          "EncryptionKeySettings": {
            "CertificateFile": {
              "Type": "Pem",
              "Path": "C:\\tago-solutions.com\\privkey1.pem"
            }
          },
          "KeySettings": {
            "SymmetricKey": {
              "Key": "veryVerySecretKey",
              "SecurityAlgorithm": "HS256"
            }          
          }

        }
      ]
    },
    "Validators": {
      "test_me": [
        {
          "Fields": [
            {
              "Type": "Issuer",
              "Mandatory": false,
              "MatchType": "Contains",
              "Values": [
                "me*",
                "meee"
              ],
              "IgnoreCase": true
            },
            {
              "Type": "Audience",
              "Mandatory": false,
              "MatchType": "NotContains",
              "Values": [
                "me*",
                "meee"
              ],
              "IgnoreCase": false
            }
          ]
        }
      ]
    },
    "Signer": {
      "DefaultKid": "_default_",
      "ValidatorKey": "%kid%",
      "SecurityKeysCacheExpiration": "00:05:00",      
      "Keys": [        
        {
          "Priority": -1,
          "Selector": ".*",
          "Kid": "_Default",
          "Issuer": "me",
          "Audience": "me",
          "JweSettings": {
            "Disabled": false,
            "KeySettings": {
              "CertificateFile": {
                "Type": "Pem",
                "Path": "C:\\tago-solutions.com\\cert1.pem"
              }
            }
          },
          "KeySettings": {
            "SymmetricKey": {
              "Key": "veryVerySecretKey",
              "SecurityAlgorithm": "HS256"
            }            
          }
        }
      ]
    }
  },
  "Jwks": {
    "FilePath": "c:\\jwks\\jwks.json"
  }
}
