{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileLoggingOptions": {
    "BatchSize": 10,
    "IsEnabled": true,
    "FileSizeLimit": 10485760,
    "RetainedFileCountLimit": 2,
    "FileName": "test-app.log",
    "LogDirectory": "Logs",
    "FilePerDay": false,
    "Encoding": "Utf8"
  },
  "Jwt": {
    "Settings": {
      //"ValidatorKey": "%kid%_%iss%",
      "DefaultKid": "_default_",
      "DefaultJwt": {
        "Issuer": "me",
        "Audience": "me",
        "ValidateIssuer": true,
        "ValidateLifetime": true
      },
      "SecurityKeysCacheExpiration": "00:10:00",
      "Keys": {
        "test": {
          "Issuer": "me",
          "Audience": "me",
          "TokenValidator": {
            "Fields": [
              {
                "Type": "Issuer",
                "Mandatory": false,
                "MatchType": "Contains",
                "Values": [
                  "^(me11|meee)", //starts with one of
                  "(me|meee)$", //ends with one of
                  "mee"
                ]
              },
              {
                "Type": "Audience",
                "Mandatory": false,
                "MatchType": "Exact",
                "Values": [
                  "me"
                ]
              }
            ]
          },
          "SigningSettings": {
            "SymmetricKey": {
              "Key": "veryVerySecretKey",
              "SecurityAlgorithm": "HS256"
            }
          },
          "ValidateLifetime": true
        }
      }
    },
    "Validators": {
      "test_me": {
        "Fields": [
          {
            "Type": "Issuer",
            "Mandatory": false,
            "MatchType": "Contains",
            "Values": [
              "^(me11|meee)", //starts with one of
              "(me|meee)$", //ends with one of
              "mee"
            ]
          },
          {
            "Type": "Audience",
            "Mandatory": false,
            "MatchType": "Exact",
            "Values": [
              "me"
            ]
          }
        ]
      }
    }
  }
}
